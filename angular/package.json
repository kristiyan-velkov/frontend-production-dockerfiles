  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ssr": "ng build && npx esbuild src/server.ts --bundle --platform=node --format=esm --packages=external --outfile=dist/angular/server/server.mjs",
